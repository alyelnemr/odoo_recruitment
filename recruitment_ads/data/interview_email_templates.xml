                        % endfor
                        % for interviewer in object.event_id.partner_ids:
                            <li>
                                <span style="margin-left:5px">${interviewer.name}</span>
                            </li>
                        % endfor
                        </ul></li>
                        </ul>
                    </td>
                </tr></table>
            </td>
        </tr></tbody>
    </table>
</div>]]></field>
        </record>
