<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="send_hr_mail_template" model="mail.template">
            <field name="name">Send Hr Mail</field>
            <field name="email_from">Recruitment@Andalusiagroup.net</field>
            <field name="subject">New Member</field>
            <field name="model_id" ref="recruitment_ads.model_hr_offer"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Kindly be informed that &quot;${object.applicant_name}&quot; - &quot;${object.job_id.name}&quot;  will join &quot;${object.business_unit_id.name}&quot; from (&quot;${object.hiring_date}&quot;)</p>
                <p>Approval Cycle Link</p>
                % set access_url =object.get_approval_cycle_url()
                <div style="text-align: center; margin-top: 16px;">
                        <a href="${access_url}"
                        style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none;
                        color: #fff; border-radius: 5px; font-size: 16px;">
                            View Approval Cycle
                        </a>
                    </div><br/><br/>
                <p>Candidate will need &quot; &quot;</p>
            ]]></field>
        </record>
    </data>
</odoo>