<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Policy Form View-->
        <record id="view_hr_policy_form" model="ir.ui.view">
            <field name="name">hr.policy.form</field>
            <field name="model">hr.policy</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Policy"/>
                            </group>
                            <group>
                                <field name="day"/>
                                <field name="month"/>
                                <field name="year"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_policy_tree" model="ir.ui.view">
            <field name="name">view_hr_policy_tree</field>
            <field name="model">hr.policy</field>
            <field name="type">tree</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <act_window id="act_hr_policy_menu"
                    name="HR Policy"
                    res_model="hr.policy"
                    view_mode="tree,form"
                    view_type="form"/>

        <menuitem id="menu_hr_policy"
                  name="HR policy"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  sequence="101"
                  action="act_hr_policy_menu"
                  groups="group_view_policy_menu"/>
    </data>
</odoo>