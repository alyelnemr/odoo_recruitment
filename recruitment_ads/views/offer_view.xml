<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="job_offer_form_view">
            <field name="name">Job - Offer Form</field>
            <field name="model">hr.offer</field>
            <field name="arch" type="xml">
                <form string="Job - Offer Form">
                    <sheet>
                        <field name="offer_name" style="font-weight:900"/>
                        <field name="application_id" invisible="1"/>
                        <group>
                            <group string="Salary">
                                <field name="fixed_salary"/>
                                <field name="variable_salary"/>
                                <field name="housing_allowance"/>
                                <field name="travel_allowance"/>
                                <field name="mobile_allowance"/>
                                <field name="total_package" style="font-weight:900"/>
                                <field name="issue_date"/>
                            </group>
                            <group string="Currency">
                                <field name="currency_id" nolabel="1" options="{'no_create':True,'no_open':True}"/>
                                <div/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_job_offer">
            <field name="name">Offers</field>
            <field name="res_model">hr.offer</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="recruitment_ads.job_offer_form_view"/>
        </record>
    </data>
</odoo>
