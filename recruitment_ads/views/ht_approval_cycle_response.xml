<odoo>
        <template id="auth_signup.fields" name="Auth Signup/ResetPassword form fields">

            <div class="form-group field-login">
                <label for="applicant_name" class="control-label">Your Email</label>
                <input type="text" name="applicant_name" t-att-value="applicant_name" id="applicant_name" class="form-control" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly'"/>
            </div>

        </template>

</odoo>